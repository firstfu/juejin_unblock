{
    "manifest_version": 3,
    "name": "掘金遮罩解鎖助手",
    "version": "1.0",
    "description": "自動移除掘金網站的遮罩層（僅限台灣地區使用）",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*.juejin.cn/*",
        "https://ipapi.co/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.juejin.cn/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    }
}